<?xml version="1.0" encoding="UTF-8"?>
<!-- Arquivo de configuração JPA (Jakarta Persistence) para PostgreSQL -->
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="meuPU" transaction-type="RESOURCE_LOCAL">
    <!-- List entity classes here (use your actual package names) -->
    <class>scoa.Aluno</class>
    <class>scoa.Curso</class>
    <class>scoa.Avaliacao</class>
    <class>scoa.Boleto</class>
    <class>scoa.BoletoPagamento</class>
    <class>scoa.BolsaFinanciamento</class>
    <class>scoa.CentroCusto</class>
    <class>scoa.ContatosAluno</class>
    <class>scoa.ContatosProfessor</class>
    <class>scoa.Disciplina</class>
    <class>scoa.Professor</class>

    <properties>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/scoa"/>
      <property name="jakarta.persistence.jdbc.user" value="postgres"/>
      <property name="jakarta.persistence.jdbc.password" value="unidade9"/>
      <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.show_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
